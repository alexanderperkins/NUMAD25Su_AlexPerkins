<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/primeSearchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Switch
        android:id="@+id/pacifierSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="52dp"
        android:text="Pacifier Switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCurrent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Checking: -"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/pacifierSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/textLatestPrime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Latest Prime: -"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnFindPrimes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Find Primes"
        app:layout_constraintTop_toBottomOf="@id/textLatestPrime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnTerminate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Terminate Search"
        app:layout_constraintTop_toBottomOf="@id/btnFindPrimes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
